# Quasar/Coforge LLM API (REST-based, no OpenAI SDK)
# Chat completions (v2 primary, v3 fallback)
LLM_CHAT_URL=https://quasarmarket.coforge.com/qag/llmrouter-api/v2/completions
LLM_CHAT_URL_V3=https://quasarmarket.coforge.com/qag/llmrouter-api/v3/completions

# Embeddings (v2 primary, v3 fallback)
LLM_EMBEDDING_URL=https://quasarmarket.coforge.com/qag/llmrouter-api/v2/text/embeddings
LLM_EMBEDDING_URL_V3=https://quasarmarket.coforge.com/qag/llmrouter-api/v3/text/embeddings

# API key (same for both chat and embeddings)
LLM_API_KEY=your-api-key-here

# Models
LLM_MODEL=gpt-5-2
LLM_FAST_MODEL=gpt-5-2
EMBEDDING_MODEL=text-embeddings
EMBEDDING_DIMENSIONS=746

# Corporate network settings
LLM_VERIFY_SSL=false
LLM_PROXY=

# JWT Auth
JWT_SECRET=your-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRY_MINUTES=60

# App Settings
INTENT_CONFIDENCE_THRESHOLD=0.7
SQL_MAX_RETRIES=3
SQL_TIMEOUT_SECONDS=10
SCHEMA_TOP_K=5

# Admin defaults
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=admin123
DEFAULT_ADMIN_EMAIL=admin@americanairlines.com
