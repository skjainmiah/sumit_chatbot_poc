# PostgreSQL Configuration
# Copy this to .env and fill in your values

# ===========================================
# PostgreSQL Connection
# ===========================================
PGHOST=localhost
PGPORT=5432
PGUSER=postgres
PGPASSWORD=your_password_here
PGDATABASE=postgres
PGSSLMODE=prefer

# ===========================================
# LLM API Configuration (Coforge/Quasar)
# ===========================================
LLM_CHAT_URL=https://your-llm-api/v2/chat/completions
LLM_CHAT_URL_V3=https://your-llm-api/v3/chat/completions
LLM_EMBEDDING_URL=https://your-llm-api/v2/embeddings
LLM_EMBEDDING_URL_V3=https://your-llm-api/v3/embeddings
LLM_API_KEY=your_api_key_here
LLM_MODEL=gpt-5-2
LLM_FAST_MODEL=gpt-5-2
LLM_VERIFY_SSL=false
LLM_PROXY=

# ===========================================
# Application Settings
# ===========================================
SQL_MAX_RETRIES=2
SQL_TIMEOUT_SECONDS=30

# JWT (change in production!)
JWT_SECRET=change-this-to-a-secure-random-string
JWT_ALGORITHM=HS256
JWT_EXPIRY_MINUTES=60

# Admin defaults (change in production!)
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=change_this_password
DEFAULT_ADMIN_EMAIL=admin@yourcompany.com
